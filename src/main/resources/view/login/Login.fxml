                    <font>
                        <Font name="Freestyle Script" size="53.0" />
                    </font>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0" startX="1.0">
                            <stops>
                                <Stop color="#00000069" />
                                <Stop color="BLACK" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </textFill>
                    <styleClass>
                        <String fx:value="lato" />
