<AnchorPane prefHeight="404.0" 
            prefWidth="700.0" 
            xmlns="http://javafx.com/javafx/8.0.111" 
            xmlns:fx="http://javafx.com/fxml/1" 
            stylesheets="@../../styles/login.css" 
